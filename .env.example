# Public base path used by the frontend to reach the API.
NEXT_PUBLIC_API_URL=http://localhost:8081

# Absolute URL (including path) pointing to the backend API. Must match NEXT_PUBLIC_API_URL when the latter is relative.
API_PROXY_TARGET=http://localhost:8081

# Origin allowed to access the API when proxied through Next.js (used for CORS headers).
CORS_ALLOWED_ORIGIN=http://localhost:8081

# API mode. Can be 'mock' or 'live'.
NEXT_PUBLIC_API_MODE=live

# Database credentials and URLs
DATABASE_USER=area_app
DATABASE_PASSWORD=change-me
DATABASE_URL=postgresql://

# JWT secrets
JWT_ACCESS_SECRET=jws-access-secret
JWT_REFRESH_SECRET=jws-refresh-secret
PASSWORD_PEPPER=password-pepper

# OAuth providers
GOOGLE_OAUTH_CLIENT_ID=google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=google-client-secret
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret

# Mailer / notifier providers
SENDGRID_API_KEY=sendgrid-api-key
REDIS_PASSWORD=redis-password
