# Public base path used by the frontend to reach the API. Can be relative (when using Next.js rewrites)
# or an absolute http(s) URL.
NEXT_PUBLIC_API_URL=/api/v1

# Absolute URL (including path) pointing to the backend API. Must match NEXT_PUBLIC_API_URL when the latter is relative.
API_PROXY_TARGET=http://localhost:8080/api/v1

# Origin allowed to access the API when proxied through Next.js (used for CORS headers).
CORS_ALLOWED_ORIGIN=http://localhost:8081

# API mode. Can be 'mock' or 'live'.
NEXT_PUBLIC_API_MODE=mock
